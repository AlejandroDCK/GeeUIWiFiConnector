            <Button
                android:id="@+id/k19"
                style="@style/keyboard_normal"></Button>

            <Button
                android:id="@+id/k110"
                style="@style/keyboard_l1_side"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/key_height"
            android:orientation="horizontal">

            <Button
                android:id="@+id/k21"
                style="@style/keyboard_l2_side"></Button>

            <Button
