            <Button
                android:id="@+id/kDelete"
                style="@style/keyboard_l3_side"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="←"
                android:textStyle="bold"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/key_height_low"
            android:background="@color/black"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/background"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/space_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/background"></Button>


                <TextView
                    android:id="@+id/kUp"
                    style="@style/keyboard1"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:paddingRight="20dp"
                    android:paddingBottom="30dp"
                    android:text="▲"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/background">

                <TextView
                    android:id="@+id/kDown"
                    style="@style/keyboard1"
                    android:layout_weight="2"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:paddingBottom="30dp"
                    android:text="▼"></TextView>

                <Button
                    android:id="@+id/space_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/background"></Button>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_wifi_list"
        android:layout_width="@dimen/wifi_select_width"
        android:layout_height="@dimen/wifi_select_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140px">

        <Spinner
            android:id="@+id/sp_wifi_list"
            style="@style/wifi_style"
            android:layout_width="@dimen/wifi_select_width"
            android:layout_height="match_parent"
            android:dropDownWidth="200px"
            android:popupBackground="@drawable/rounded_corner_background"
            android:visibility="gone"
            android:spinnerMode="dropdown"></Spinner>

    </RelativeLayout>



