        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/key_height"
            android:orientation="horizontal">

            <Button
                android:id="@+id/k31"
                style="@style/keyboard_l3_side"
                android:gravity="right|center_vertical"
                android:paddingRight="10dp"></Button>

            <Button
                android:id="@+id/k32"
