<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"></View>
    <TextView
        android:text="Binding Robot 绑定机器人"
        android:gravity="center_horizontal"
        style="@style/pair_style"></TextView>

    <TextView
        android:id="@+id/tv_robot_name"
        android:text="@string/check_new_version_des"
        android:layout_marginTop="10sp"
        android:gravity="left"
        style="@style/pair_style"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"></View>


    <com.letianpai.robot.wificonnet.view.CommitButton
        android:id="@+id/iv_ok"
        android:layout_width="119px"
        android:layout_height="41px"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="OK"
        android:background="@drawable/rounded_background_selector"
        android:textSize="@dimen/key_size"
        ></com.letianpai.robot.wificonnet.view.CommitButton>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>


</LinearLayout>
